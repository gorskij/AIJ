{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "typeRoots": ["node_modules/@types", "src/types"],
      "strict": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  